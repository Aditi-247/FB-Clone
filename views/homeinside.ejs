<html>
    <head>
        <title>
            <%=title%>
        </title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i" rel="stylesheet">
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>  
        <header class="header-bar mb-3">
            <div class="container d-flex flex-column flex-md-row align-items-center p-3">
                <h4 class="my-0 mr-md-auto font-weight-normal"><a href="/home" class="text-white">Codeial</a></h4>
                <div class="flex-row my-3 my-md-0">
                    <!-- <span class="text-white mr-2 header-chat-icon" title="Chat" data-toggle="tooltip" data-placement="bottom"><i class="fas fa-comment"></i></span> -->
                    <a href="href="/user/profile/:id" class="mr-2"><img title="My Profile" data-toggle="tooltip" data-placement="bottom" style="width: 32px; height: 32px; border-radius: 16px;" src="https://gravatar.com/avatar/f64fc44c03a8a7eb1d52502950879659?s=128"></a>
                    <!-- <a class="btn btn-sm btn-success mr-2" href="#">Create Post</a> -->
                    <form action="#" method="POST" class="d-inline">
                        <button class="btn btn-sm btn-success mr-2" id="btn" style="background-color: #FFA200;"><a href="/user/sign-out">Sign Out</a></button>
                    </form>
                </div>
            </div>
        </header>

        <!----Body start from-->
        <div class="container py-md-5 container--narrow"> 
            <form action="/posts/create" id="new-post-form" method="POST">
                 <div class="form-group">
                   <!-- <label for="post-title" class="text-muted mb-1"><small>Title</small></label> -->
                    <!-- <input required name="title" id="post-title" class="form-control form-control-lg form-control-title" type="text" autocomplete="off"> -->
                    <textarea name="content" id="post-title" class="form-control form-control-lg form-control-title" autocomplete="off" cols="10" rows="6" placeholder="Write something here..." required></textarea>
                 </div>   
                 <div class="form-group">
                    <input type="hidden" name="user" value="<%=user._id%>">
                    <input type="submit" class="btn" style="background-color: #FFA200;" value="Post">
                 </div>
            </form> 
         </div>   
             <div id="post-list-container">
                <ul>
                    <% for(post of posts){%>

                     <%- include('_post') -%> 

                    <% } %>
                 </ul>
            </div>
         <div id="home-container">   
            <section id="feed-post">
                <h4>Feeds</h4>
            </section>
          <section id="user-friends">
          <h4>Friends</h4>
           <% for(u of all_users) { %>
             <p>
                <a href="/user/profile/<%=u.id%>"><%=u.name%></a>
             </p>
           <% } %>
        </section> 
    </div>
    
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.5.0/js/all.js" integrity="sha384-GqVMZRt5Gn7tB9D9q7ONtcp4gtHIUEW/yG7h98J7IpE3kpi+srfFyyB/04OV6pG0" crossorigin="anonymous"></script>
       <script src="/js/home_comment.js" ></script>
       <script src="/js/home_posts.js" ></script>

       <!-- CHANGE :: import the script file for toggle likes, also run it over for the already present posts and comments on the page -->
       <script src="/js/toggle-like.js"></script>
       <script>
          $('.toggle-like-button').each(function(){
            let self = this;
            let toggleLike = new  ToggleLike(self);
          });
       </script>

       
    </body>
</html>